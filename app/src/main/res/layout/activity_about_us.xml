<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contanier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_header_view" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/user_us_logo" />

        <TextView
            android:id="@+id/tv_ver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#666666" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/RlStyle"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/user_us_accounts"/>

            <TextView
                android:layout_toRightOf="@+id/iv_icon1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="微信公众号"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="小强单车"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View style="@style/LineStyle" />

        <RelativeLayout
            android:id="@+id/rl_phone"
            style="@style/RlStyle">

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/user_us_telphone"/>

            <TextView
                android:layout_toRightOf="@+id/iv_icon2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="联系电话"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="13612670009"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View style="@style/LineStyle" />

        <RelativeLayout
            style="@style/RlStyle">
            <ImageView
                android:id="@+id/iv_icon3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/user_us_email"/>

            <TextView
                android:layout_toRightOf="@+id/iv_icon3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="邮箱地址"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="daiyi@estronger.cn"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View style="@style/LineStyle" />

        <RelativeLayout
            android:id="@+id/rl_web"
            style="@style/RlStyle">
            <ImageView
                android:id="@+id/iv_icon4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/user_us_web"/>

            <TextView
                android:layout_toRightOf="@+id/iv_icon4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="官方网站"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="bike.estronger.cn"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#999999"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Copyright © 2013-2017 广东亦强软件有限公司"
            android:layout_width="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>