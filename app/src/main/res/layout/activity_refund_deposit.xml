<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contanier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_header_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_icon"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/user_wallet_success" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_icon"
            android:gravity="center_horizontal"
            android:text="押金退款成功"
            android:textColor="@color/green_color"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_s"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="押金将直接退回到充值账户"
            android:textColor="#696969" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hint"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="2-7个工作日内到账"
            android:textColor="#696969" />


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_balance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/semi_round_backgroud"
            android:text="确定"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#ffffff" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/user_wallet_bg" />
    </RelativeLayout>
</LinearLayout>